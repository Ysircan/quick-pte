generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  passwordHash String
  name         String?

  isSystemAccount Boolean @default(false)

  emailVerifiedAt   DateTime?
  passwordChangedAt DateTime?
  lastLoginAt       DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  progress         UserProgress?
  languageProgress UserLanguageProgress[]

  // ✅ add: wfd runs (map存档)
  wfdRuns WfdRun[]

  @@index([createdAt])
}

model UserProgress {
  id     String @id @default(cuid())
  userId String @unique

  unlockXP Int @default(0) // 全局解锁经验：任何语言学习都累计加（灰→亮只看它）

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([updatedAt])
}

model UserLanguageProgress {
  id       String @id @default(cuid())
  userId   String
  language String // "en" | "ja" | "fr" | "de" | "zh" ... 用 string，别 enum

  langXP Int @default(0) // 分语言经验：每个 language 独立累计

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, language])
  @@index([userId, updatedAt])
}
model WfdRun {
  id     String @id @default(cuid())
  userId String

  // 你现在只有 Map1/Map2/Map3 的概念
  mapId Int @default(1)

  // 用于复现同一张图（图生成规则稳定时很好用）
  seed  Int

  // ✅ 核心：把你现在的 SerializedMapState 整个 JSON 存进来
  // 例如：selectedByRow/reachable/visited/activeEdges/graph...
  stateJson Json

  // run 层面的生命/资源
  hp Int @default(3)

  // "ACTIVE" | "WON" | "DEAD"
  status String @default("ACTIVE")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status, updatedAt])
  @@index([userId, updatedAt])
}